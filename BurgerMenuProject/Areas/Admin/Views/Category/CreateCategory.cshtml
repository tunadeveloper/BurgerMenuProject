@model BurgerMenuProject.Entities.Category
@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Kategori</h4>
            <br /><br />
            <form method="post">
                <label>Kategori Adı</label>
                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
                <br />
                <button class="btn btn-info">Kategoriyi Ekle</button>
            </form>
        </div>
    </div>
</div>


