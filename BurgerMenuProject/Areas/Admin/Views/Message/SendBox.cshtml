    }

    .destek-color {
        color: blue;
    }

    .tesekkur-color {
        color: green;
    }

    .duyuru-color {
        color: orange;
    }

    .finans-color {
        color: purple;
    }

    .menu-color {
        color: brown;
    }

    .diger-color {
        color: gray;
    }
</style>