    .pagination .page-item.active .page-link {
        background-color: #ec37fc;
        border-color: #ec37fc;
        color: white;
    }

    .pagination .page-link {
        color: black;
    }

        .pagination .page-link:hover {
            color: #ec37fc;
        }

    .modal-body {
        padding: 20px;
