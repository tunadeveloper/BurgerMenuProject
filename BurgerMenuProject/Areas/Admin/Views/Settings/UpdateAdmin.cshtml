@model BurgerMenuProject.Entities.Admin
@{
    ViewBag.Title = "UpdateAdmin";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni admin Girişi</h4>
            <form method="post">
                @Html.HiddenFor(x=>x.AdminId)
                <label>AD</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                <br />
                <label>Soyad</label>
                @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                <br />
                <label>Email</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                <br />
                <label>Username</label>
                @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                <br />
                <label>Pasasword</label>
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                <br />

                <button class="btn btn-info">Görseli Ekle</button>
            </form>
        </div>
    </div>
</div>
