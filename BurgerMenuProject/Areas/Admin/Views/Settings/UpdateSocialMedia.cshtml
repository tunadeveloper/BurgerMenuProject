@model BurgerMenuProject.Entities.SocialMedia
@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hesabı Güncelle</h4>
            <br /><br />
            <form method="post">
                @Html.HiddenFor(x => x.Id)
                <label>Platform</label>
                @Html.TextBoxFor(x => x.SocialMedianame, new { @class = "form-control" })
                <br />

                <label>Icon</label>
                @Html.TextBoxFor(x => x.SocialMediaIcon, new { @class = "form-control" })
                <br />

                <label>Url</label>
                @Html.TextBoxFor(x => x.SocialMediaUrl, new { @class = "form-control" })
                <br />

                <button class="btn btn-info">Hesabı Güncelle</button>
            </form>
        </div>
    </div>
</div>