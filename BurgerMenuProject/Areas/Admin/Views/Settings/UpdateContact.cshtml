@model BurgerMenuProject.Entities.Contact
@{
    ViewBag.Title = "UpdateContact";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İletişim Bilgilerini Güncelle</h4>
            <br /><br />
            <form method="post">
                @Html.HiddenFor(x => x.Id)

                <label>Fotoğraf</label>
                @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
                <br />

                <label>E-Posta Adresi</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                <br />

                <label>Telefon Numarası</label>
                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
                <br />


                <label>Adres</label>
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                <br />


                <label>Konum</label>
                @Html.TextBoxFor(x => x.MapUrl, new { @class = "form-control" })
                <br />

                <button class="btn btn-success">Bilgileri Güncelle</button>
            </form>
        </div>
    </div>
</div>

