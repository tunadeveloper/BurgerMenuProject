@model List<BurgerMenuProject.Entities.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ürün Listesi</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Karşılama Mesajı</th>
                            <th>Hakkımızda Yazısı</th>
                            <th>Karşılama Görseli</th>
                            <th>Hakkımızda Görseli</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.WelcomeText</td>
                                <td>@item.AboutText</td>
                                <td><img src="@item.WelcomeImage" height="50" width="50" /></td>
                                <td><img src="@item.AboutImage" height="50" width="50" /></td>
                                <td><a href="/Admin/About/UpdateAbout/@item.Id" class="btn btn-success">Güncelle</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>