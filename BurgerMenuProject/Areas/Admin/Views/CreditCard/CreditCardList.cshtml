@model List<BurgerMenuProject.Entities.CreditCard>
@{ 
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Listesi</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>İsim Soyisim</th>
                            <th>Kart Numarası</th>
                            <th>Son Kullanma Tarihi</th>
                            <th>CVV</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.NameSurname</td>
                                <td>@item.CardNumber</td>
                                <td>@item.expirationDate</td>
                                <td>@item.Cvv</td>
                                <td><a href="/Admin/CreditCard/DeleteCreditCard/@item.Id" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
