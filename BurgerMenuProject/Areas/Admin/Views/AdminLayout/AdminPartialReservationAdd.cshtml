@model List<BurgerMenuProject.Entities.Reservation>

<div class="modal fade" id="reservationModal" tabindex="-1" role="dialog" aria-labelledby="reservationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="bg-image" style="background-image: url(/eatwell-master/images/reservation_1.jpg);"></div>
                    </div>
                    <div class="col-lg-12 p-5">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <small>Vazgeç </small><span aria-hidden="true">&times;</span>
                        </button>
                        <h1 class="mb-4">Rezervasyon Ekle</h1>
                        <form method="post" action="@Url.Action("AdminPartialReservationAdd", "AdminLayout")">
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="m_fname">Ad</label>
                                    <input type="text" name="Name" class="form-control" id="m_fname">
                                </div>
                                <div class="col-md-6 form-group">
                                    <label for="m_lname">Soyad</label>
                                    <input type="text" name="Surname" class="form-control" id="m_lname">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <label for="m_email">E-Posta Adresi</label>
                                    <input type="email" name="Email" class="form-control" id="m_email">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="m_people">Kişi Sayısı</label>
                                    <select name="PeopleCount" id="m_people" class="form-control">
                                        <option value="1">1 Kişi</option>
                                        <option value="2">2 Kişi</option>
                                        <option value="3">3 Kişi</option>
                                        <option value="4">4+ Kişi</option>
                                    </select>
                                </div>
                                <div class="col-md-6 form-group">
                                    <label for="m_phone">Telefon Numarası</label>
                                    <input type="text" name="Phone" class="form-control" id="m_phone">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="reservation_date">Tarih</label>
                                    <input type="date" name="ReservationDate" class="form-control" id="reservation_date">
                                </div>
                                <div class="col-md-6 form-group">
                                    <label for="reservation_time">Saat</label>
                                    <input type="time" name="ReservationTime" class="form-control" id="reservation_time">
                                </div>
                            </div>



                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <label for="m_message">Mesajı</label>
                                    <textarea class="form-control" name="Message" id="m_message" cols="30" rows="7"></textarea>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input type="submit" class="btn btn-primary btn-lg btn-block" value="Rezervasyonu Ekle">
                                </div>
                            </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#reservationModal form').on('submit', function (event) {
            event.preventDefault();
            $.ajax({
                type: 'POST',
                url: $(this).attr('action'),
                data: $(this).serialize(),
                success: function (result) {
                    $('#reservationModal').modal('hide');
                },
                error: function (xhr, status, error) {
                }
            });
        });
    });
</script>
