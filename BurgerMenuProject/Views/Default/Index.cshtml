@model BurgerMenuProject.Entities.UserMessage
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
@Html.Action("PartialHead", "Default")
<body data-spy="scroll" data-target="#site-navbar" data-offset="200">

    @Html.Action("PartialNavbar", "Default")

    @Html.Action("PartialAbout", "Default")

    @Html.Action("TodaysOffer", "Default")

    @Html.Action("PartialMenu", "Default")

    @Html.Action("PartialGallery", "Default")


    <section class="site-section bg-light" id="section-contact">
        <div class="container">
            <div class="row">

                @Html.Action("PartialContactHead", "Default")
               
                <div class="col-md-7 mb-5 site-animate">
                    <form method="post">
                        <div class="form-group">
                            <label for="name" class="sr-only">Ad Soyad</label>
                            <input type="text" class="form-control" id="name" placeholder="Ad Soyad" name="NameSurname" required>
                        </div>
                        <div class="form-group">
                            <label for="email" class="sr-only">E-Posta Adresi</label>
                            <input type="email" class="form-control" id="email" placeholder="E-Posta Adresi" name="Email" required>
                        </div>
                        <div class="form-group">
                            <label for="message" class="sr-only">Mesaj</label>
                            <textarea id="message" cols="30" rows="10" class="form-control" placeholder="Bir Mesaj Yazın..." name="Message" required></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary btn-lg" value="Mesajı Gönder">
                        </div>
                    </form>
                </div>

                @Html.Action("PartialContact", "Default")
            </div>
        </div>
    </section>

    @Html.Action("PartialMap", "Default")

    @Html.Action("PartialFooter", "Default")

    @Html.Action("PartialReservation", "Default")

    @Html.Action("PartialScripts", "Default")


</body>
</html>