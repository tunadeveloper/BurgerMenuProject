@model BurgerMenuProject.Entities.UserMessage
<div class="col-md-7 mb-5 site-animate">
    <form method="post">
        <div class="form-group">
            <label for="name" class="sr-only">Ad Soyad</label>
            <input type="text" class="form-control" id="name" placeholder="Ad Soyad" name="NameSurname">
        </div>
        <div class="form-group">
            <label for="email" class="sr-only">E-Posta Adresi</label>
            <input type="text" class="form-control" id="email" placeholder="E-Posta Adresi" name="Email">
        </div>
        <div class="form-group">
            <label for="message" class="sr-only">Mesaj</label>
            <textarea id="message" cols="30" rows="10" class="form-control" placeholder="Bir Mesaj Yazın..." name="Message"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-lg" value="Send Message">
        </div>
    </form>
</div>